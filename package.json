{
  "name": "superchase",
  "version": "2.1.0",
  "description": "AI Executive Assistant - Hub and Spoke Architecture",
  "type": "module",
  "main": "triage.js",
  "scripts": {
    "start": "npm run triage && npm run brief",
    "server": "node server.js",
    "triage": "node triage.js",
    "triage:dry": "node triage.js --dry-run",
    "brief": "node spokes/voice/george_bridge.js",
    "brief:refresh": "node spokes/voice/george_bridge.js --refresh",
    "wrap": "node core/wrap_up.js",
    "query": "node core/query_hub.js",
    "brainstorm": "node core/analyzer.js",
    "ingest": "node spokes/brainstorm/ingest.js",
    "limitless": "node spokes/limitless/scout.js",
    "limitless:search": "node spokes/limitless/scout.js search",
    "limitless:test": "node spokes/limitless/scout.js test",
    "test:brainstorm": "node scripts/test-brainstorm.js",
    "smoke": "./smoke_test.sh",
    "test": "node --test tests/*.test.js",
    "test:unit": "node --test tests/core.test.js tests/lib.test.js tests/enterprise.test.js",
    "test:enterprise": "node --test tests/enterprise.test.js",
    "test:api": "node --test tests/api.test.js",
    "test:watch": "node --test --watch tests/*.test.js",
    "test:asana": "node -e \"import('./spokes/asana/pusher.js').then(m => m.getTasks().then(console.log))\"",
    "test:classify": "node -e \"import('./core/hub.js').then(m => m.classify({subject:'URGENT: Need response', body:'Please respond ASAP', sender:'client@test.com'}).then(console.log))\"",
    "test:sheets": "node -e \"import('./spokes/sheets/logger.js').then(m => m.testConnection().then(console.log))\"",
    "dashboard": "cd frontend && npm run dev",
    "dashboard:build": "cd frontend && npm run build",
    "brand:scrape": "node spokes/brand/scraper.js",
    "brand:all": "node spokes/brand/scraper.js --all",
    "brand:list": "node spokes/brand/scraper.js --list",
    "gst": "node spokes/strategy/gst.js",
    "gst:status": "node spokes/strategy/gst.js --all status",
    "gst:tactics": "node spokes/strategy/gst.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "postinstall": "prisma generate || true"
  },
  "dependencies": {
    "@prisma/client": "^7.3.0",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.3.1",
    "formidable": "^3.5.4",
    "pdf-parse": "^1.1.1",
    "prisma": "^7.3.0",
    "xlsx": "^0.18.5"
  },
  "author": "Chase Pierson",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  }
}
